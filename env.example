# Threat-Forge Environment Configuration

# Application Settings
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql+asyncpg://threatforge:threatforge@localhost:5432/threatforge

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# File Upload Limits
MAX_UPLOAD_SIZE=10485760  # 10MB
MAX_CSV_ROWS=50000

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Threat Intelligence Provider API Keys
# Get these from the respective provider websites

# VirusTotal API Key
VIRUSTOTAL_API_KEY=your-virustotal-api-key

# URLScan.io API Key
URLSCAN_API_KEY=your-urlscan-api-key

# CrowdStrike Intel API Credentials
CROWDSTRIKE_CLIENT_ID=your-crowdstrike-client-id
CROWDSTRIKE_CLIENT_SECRET=your-crowdstrike-client-secret

# Flashpoint API Key
FLASHPOINT_API_KEY=your-flashpoint-api-key

# Recorded Future API Key
RECORDED_FUTURE_API_KEY=your-recorded-future-api-key

# Logging
LOG_LEVEL=INFO
